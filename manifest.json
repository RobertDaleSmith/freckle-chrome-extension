{
  "manifest_version": 2,

  "name": "Freckle Chrome",
  "description": "This extension adds a button for the freckle timer to your Chrome toolbar.",
  "version": "1.0",
  "options_page": "options.html",
  "icons": { "16": "icon-16.png",
             "48": "icon-48.png",
            "128": "icon-128.png" },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
